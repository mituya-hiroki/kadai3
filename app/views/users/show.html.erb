
<div class="container">
	<div class="row">	
		<div class="col-xs-3">	
<!-- ユーザ情報 -->



<h2>User info</h2>
<%= attachment_image_tag @user,:profile_image,:fill,60,60,format:"jpg",fallback: "no_image.jpg", size:'60x60' %>
<table class="table">	
	<tbody>	
		<tr></tr>
		<tr>	
			<td>name</td>
			<td><%= @user.name %></td>
		</tr>
		<tr>	
			<td>introduction</td>
			<td><%= @user.introduction %></td>
		</tr>
	</tbody>
</table>
<% if @user.id == current_user.id %>
<%= link_to edit_user_path(@user.id) do %>
<div class="btn-group" role="group">
	<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
</div>
<% end %>	
<% end %>

<!-- 新規投稿 -->
<h2>New book</h2>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>	
<%= f.submit "Create Book"  %>

<% end %>
		</div>
		<div class="col-xs-9">	

<!-- 投稿した本一覧 -->
<h2>Books</h2>
<table class="table">
	<thead>
		<tr>
			<th></th>	
			<th>Title</th>
			<th>Opinion</th>
		</tr>
	</thead>	
	<tbody>	
		<% @books.each do |book| %>
		<tr>	
			<th><%= attachment_image_tag @user,:profile_image,:fill,60,60,format:"jpg",fallback: "no_image.jpg", size:'60x60' %>	</th>
			<td><%= link_to book.title,book_path(book.id) %></td>
			<td><%= book.body  %></td>
		</tr>
		<% end %>
	</tbody>
</table>



		</div>
</div>