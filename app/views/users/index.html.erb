<div class="container">
	<div class="row">	
		<div class="col-xs-3">
<h1>User info</h1>
<%= attachment_image_tag @user,:profile_image,:fill,60,60,format:"jpg", fallback: "no_image.jpg", size:'60x60' %>
<table class="table">	
	<tbody>
	<tr></tr>
	<tr>		
		<td>name</td>
		<td><%= @user.name %></td>
	</tr>
	<tr>	
		<td>introduction</td>
		<td><%= @user.introduction %></td>
	</tr>
	</tbody>
</table>

<% if @user.id == current_user.id %>
<%= link_to edit_user_path(@user.id) do %>
<div class="btn-group" role="group">
	<button type="button" class="btn btn-default"><span class="glyphicon glyphicon-wrench" aria-hidden="true"></span></button>
</div>
<% end %>
<% end %>

<h1>New book</h1>
<%= form_for(@book) do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opininion</h4>
<%= f.text_area :body %>
<%= f.submit "Create Book" %>
<% end %>
		</div>
		<div class="col-xs-9">	

<h1>Users</h1>
<table class = "table">
<tr>
	<th>image</th>
	<th>name</th>
</tr>	
<% @users.each do |user| %>
<tr>
	<td><%= attachment_image_tag user ,:profile_image,:fill,60,60, format:"jpg",fallback: "no_image.jpg", size:'60x60'%></td>
	<td><%= user.name %></td>
	<td><%= link_to "Show",user_path(user.id) %></td>
</tr>
<% end %>
</table>
		</div>
</div>
</div>
