<div class="container">
	
<h2>User info</h2>

<% if @user.errors.any? %>
<h1><%= pluralize(@user.errors.count, "error") %>prohibited this obj from being saved:</h1>
<% @user.errors.full_messages.each do |message| %>
	<li><%= message %></li>
<% end %>
<% end %>

<%= form_for(@user) do |f| %>
<h4>Name</h4>
<%= f.text_field :name,autofocus: true %>
<h4>Image</h4>
<%= f.attachment_field :profile_image %>
<h4>Introduction</h4>
<%= f.text_area :introduction %>
<%= f.submit "Update User" %>

<% end %>

</div>